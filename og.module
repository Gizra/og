  $result = pager_query(db_rewrite_sql($sql), $num, $i, NULL, $gid);
  while ($row = db_fetch_object($result)) {
    $rows[] = array(l($row->title, "node/$row->nid"), format_name($row), $row->comment_count, format_date($row->created, 'small'));
