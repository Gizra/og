    if (!module_exists('job_queue')) {
      $requirements['og_modules']  = array(
        'title' => $t('Organic groups modules'),
        'value' => $t('Organic groups works best when <a href="@job_queue">job_queue.module</a> is enabled. See the integration section of the !readme_file.', array('@job_queue' => 'http://drupal.org/project/job_queue', '!readme_file' => og_readme())),
